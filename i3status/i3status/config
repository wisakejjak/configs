general {
    colors = true # on/off  (true/false) color support
    interval = 1 # refresh interval, sec
    output_format = "i3bar" # output fromat - i3bar (JSON)
}

# output order
order += "volume master"
order += "wireless _first_"
order += "battery all"
order += "cpu_temperature 0"
order += "tztime local"

# Volume control
volume master {
    format = "%volume" # on
    format_muted = " %volume" # muted
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

#  WI-FI
wireless _first_ {
    format_up = "%quality %frequency"
    format_down = "W: down"
}

# Battery
battery all {
    format = "%status %percentage"
    last_full_capacity = false
    format_down = "No battery"
    status_chr = "" # charging
    status_bat = "" # on battery 
    status_unk = "? UNK" # unknown
    status_full = "" # fully charged
    path = "/sys/class/power_supply/BAT%d/uevent"
    low_threshold = 15 # low charge
}

# CPU Temperature
cpu_temperature 0 {
    format = " %degrees"
    max_threshold = "80"
    format_above_threshold = " %degrees"
    path = "/sys/class/thermal/thermal_zone0/temp"
}

# Local time
tztime local {
    format = "%d %B %Y %H:%M:%S"
}
